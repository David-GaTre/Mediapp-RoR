
<div class="container-fluid bg-platinum full-height">
  <div class="d-flex flex-row justify-content-center">
    <div class="container flex-column shadow bg-white m-5 px-5">
      <div class="d-flex justify-content-center">
        <img src="/assets/logoBlack" width="90" height="90" class="my-3"/>
      </div>
      <h2 class="mt-2 text-center">Registro</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h4 class="mt-4">Información Básica</h4>
        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :name, "Nombre(s)" %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= f.label :first_last_name, "Apellido Paterno" %><br />
              <%= f.text_field :first_last_name, autofocus: true, autocomplete: "first last name", :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= f.label :second_last_name, "Apellido Materno" %><br />
              <%= f.text_field :second_last_name, autofocus: true, autocomplete: "second last name", :class => "form-control" %>
            </div>
          </div>
        </div>

        <br>
        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :sex, "Sexo" %><br />
              <%= f.select :sex, options_for_select([ [], ["Hombre", "Male"], ["Mujer", "Female"], ["Otro", "Other"] ], ""), {}, :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= f.label :dob, "Fecha de nacimiento" %><br />
              <%= f.date_field :dob, autofocus: true, max: Date.today, :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= f.label :curp, "CURP" %><br />
              <%= f.text_field :curp, autofocus: true, :class => "form-control" %>
            </div>
          </div>
        </div>


        <div class="row mt-4">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :phone_number, "Teléfono" %><br />
              <%= f.phone_field :phone_number, autofocus: true, :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= f.label :email, "Correo Electrónico" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"%>
            </div>
          </div>
          <div class="col-md-4"></div>
        </div>

        <div class="row mt-4">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :contraseña %>
              <% if @minimum_password_length %>
              <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="field">
              <%= f.label :confirmar_contraseña %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
            </div>
          </div>
          <div class="col-md-4"></div>
        </div>


        <div class="row mt-4">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :role, "Tipo de Cuenta" %><br />
              <%= f.select :role, options_for_select([ [], [ "Doctor", "doctor"], ["Paciente", "patient"], ["Asistente", "assitant"] ], ""),{}, :onchange => "manageRoleForm()", id: "role-input", :class => "form-control" %>
            </div>
          </div>
        </div>

        <br>
        
        <div class="row">
          <div class="col-md-6">
            <div id = "doctor-form">
              <h4>Información Adicional</h4>
              <div class="field">
                <%= label_tag :cedula, "Cedula Profesional" %><br />
                <%= text_field :doctor, :cedula, :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>




        <div id = "patient-form">
          <h4>Información Adicional</h4>
          <div class="row">
            <div class="col-md-4">
              <div class="field">
                <%= label_tag :weight, "Peso" %><br />
                <%= number_field :patient, :weight, :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="field">
                <%= label_tag :height, "Altura" %><br />
                <%= number_field :patient, :height, :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="field">
                <%= label_tag :blood, "Tipo de Sangre" %><br />
                <%= select_tag :blood, options_for_select([ [], [ "O+", "o-positive"], ["O-", "o-negative"], ["A+", "a-positive"], [ "A-", "o-negative"],  ["B+", "b-positive"], [ "B-", "b-negative"],  ["AB+", "ab-positive"], [ "AB-", "ab-negative"]], ""), id: "role-input", :class => "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center text-center">
          <div class="col-md-4">
            <div class="actions">
              <%= f.submit "Registrarme", :class => "btn btn-mahogany" %>
            </div>
          </div>
        </div>

      <% end %>

      <div class="row justify-content-center text-center mb-4 mt-2">
        <div class="col-md-4">
          <%= render "devise/shared/links"%>
        </div>
      </div>
    </div>
  </div>
</div>
