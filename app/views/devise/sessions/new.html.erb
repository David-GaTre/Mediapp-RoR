<div class="container-fluid bg-platinum full-height">
  <div class="d-flex flex-row justify-content-center">
    <div class="container flex-column shadow bg-white bg-y-margin">
      <div class="d-flex justify-content-center">
          <img src="/assets/logoBlack" width="90" height="90" class="my-3"/>
        </div>
      <h2 class="text-center mt-3">Iniciar sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="d-flex justify-content-center form-group mt-4">
          <div class= "flex-column flex-grow-1 mx-lg-9">
            <div class="flex-row"><%= f.label :correo_electrónico %></div>
            <div class="flex-row"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
          </div>
        </div>

        <div class="d-flex justify-content-center form-group mt-4">
          <div class= "flex-column flex-grow-1 mx-lg-9">
            <div class="flex-row"><%= f.label :contraseña %></div>
            <div class="flex-row"><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></div>
            <small class="flex-row">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class:"form-text" %>
              <% end %>
            </small>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="d-flex justify-content-center form-check">
            <div class="flex-row">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :recordar_cuenta, class: "form-check-label" %>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <div class="d-flex justify-content-center field mt-4">
            <%= f.submit "Iniciar sesión" , class: "btn btn-mahogany"%>
          </div>
        </div>
      <% end %>
      
      <div class="d-flex justify-content-center my-4">
        <div class="flex-row text-center">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Regístrate", new_registration_path(resource_name) %><br />
          <% end %>
        </div>
      </div>
    </div>
   

  </div>
</div>

