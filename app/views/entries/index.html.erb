<p id="notice"><%= notice %></p>

<h1>Entradas</h1>

<table class="table table-striped ">
  <thead>
    <tr>
      <th>Paciente</th>
      <th>Fecha</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      
      <tr>
        <td><%= entry.date %></td>
        <td><%= entry.patient.user.full_name %></td>  
        <td>  
          <a type="button" data-toggle="modal" data-target="#entry-<%=entry.id%>"> Ver mÃ¡s </a> 
        </td>  
        <td>  
          <%= link_to 'Editar', edit_entry_path(entry.id) %> 
        </td>  
      </tr>

      
      <div class="modal fade" id="entry-<%=entry.id%>">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title"><%= entry.patient.user.full_name%> - <%= entry.date %></h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              <%= entry.comments %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </tbody>
  <br>
</table>
<%= link_to 'Regresar', root_path %>
