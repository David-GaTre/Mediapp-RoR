<p id="notice"><%= notice %></p>
<div class="bg-white shadow rounded p-3 bg-y-margin">
  <div class="row">
    <div class="col-md-12 px-5">
      <div class="main-header">
      <h4><strong>Agendar cita con el Dr. <%= office.doctor.user.full_name %></strong></h4>
      </div>
      <%= form_with url: meetings_path, method: :post, local: true do |f| %>
        <br>
        <p style="font-size:17px"><strong><%= f.label :start_time,  "Hora de la consulta" %></strong></p>
        <%= f.datetime_select :start_time, 
        :start_hour => office.open_hour.strftime('%H').to_i, 
        :end_hour => office.close_hour.strftime('%H').to_i,
        :minute_step => 30, 
        :selected => Date.today,
        :min => DateTime.now,
        :class => 'datepicker' %>

        <%= f.hidden_field :doctor_id, value: office.doctor.id  %>
        <%= f.hidden_field :patient_id, value: patient.id %>

        <br><br>
        <%= f.submit "Agendar Cita", :class => "btn btn-mahogany" %>
      <% end %>
      <br>
      <p class="back-btn"><%= link_to 'Regresar', root_path %></p>
    </div>
  </div>
</div>