<p id="notice"><%= notice %></p>
<h4>Agendar cita con el doctor <%= office.doctor.user.full_name %></h4>
<div class="row">
    <div class="col-md-4">
      <%= form_with url: meetings_path, method: :post, local: true do |f| %>
      
        <%= f.label :start_time %><br>
        <%= f.datetime_select :start_time, 
        :start_hour => office.open_hour.strftime('%H').to_i, 
        :end_hour => office.close_hour.strftime('%H').to_i-1,
        :minute_step => 30, 
        :selected => Date.today,
        :min => DateTime.now,
        :class => 'form-control' %>

        <%= f.hidden_field :doctor_id, value: office.doctor.id  %>
        <%= f.hidden_field :patient_id, value: patient.id %>

        <br><br>
        <%= f.submit "Agendar Cita", :class => "btn btn-outline-secondary" %>
      <% end %>

    </div>
</div>