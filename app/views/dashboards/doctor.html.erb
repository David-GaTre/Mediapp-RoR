<p id="notice"><%= notice %></p>
<% if current_user %>
  <div>
  <img src="images/doclogo.png" alt="logo">
  <h3> Bienvenid@ Dr.  <%= user.full_name %> <h3>
  </div>
  
  <% if !user.has_office? %>
    <h4>Parece que aun no tiene un consultorio creado. Haga clic en el siguiente botón para hacerlo </h4>
    <%= link_to 'Crear consultorio', new_office_path, class: "btn btn-primary" %>
  <% else %>
    
    <h5><%= user.doctor.office.name %></h5>
    <div class="position-relative" >
    <div class="alert alert-secondary" style="background-color:#67838e;color:#e8e9eb">
      Comparte el siguiente código con sus pacientes para que se registren en su consultorio virtual <span class="text-primary" style=""><%= user.doctor.office.code %> </span>
    </div>
    </div> 
    <h5>Mi Agenda</h5>
    <div class="row">
      <div class="col-md-8">
        <%= calendar(number_of_days: 4, events: @meetings) do |date, meetings| %>
          <%= date %>

          <% meetings.each do |meeting| %>
            <div>
              <b><%= meeting.start_time.strftime("%H:%M") %></b> - 
              <%= meeting.patient.user.full_name %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="col-md-4" style="background-color:#6f7c12;color:#e8e9eb;border-radius: 25px">
        <h4 style="margin: 10px">Consultas de hoy</h4>
        <hr style="background-color:#e8e9eb">
        <% @meetings_today.each do |meeting| %>
          <%= meeting.patient.user.full_name %>
          <%= meeting.start_time.strftime("%H:%M") %>
          <br>
        <% end %>
      </div>
    </div>
  <% end %>
  <br>
<% end %>
